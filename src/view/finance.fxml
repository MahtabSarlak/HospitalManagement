<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FinanceController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="800.0">
         <image>
            <Image url="@../file/bck3.png" />
         </image>
      </ImageView>
      <TableView fx:id="personTable" layoutX="32.0" layoutY="33.0" prefHeight="410.0" prefWidth="262.0">
        <columns>
          <TableColumn fx:id="usernameColumn" prefWidth="136.0" text="Username" />
          <TableColumn fx:id="salaryColumn" prefWidth="125.0" text="Salary" />
        </columns>
      </TableView>
      <Label layoutX="394.0" layoutY="76.0" text="Total">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <Label layoutX="394.0" layoutY="227.0" text="Total Salary">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <Button fx:id="payButton" layoutX="502.0" layoutY="484.0" mnemonicParsing="false" onAction="#handlePay" text="Pay Salary">
         <font>
            <Font size="21.0" />
         </font>
      </Button>
      <Button fx:id="exitButton" layoutX="657.0" layoutY="484.0" mnemonicParsing="false" onAction="#handleExit" text="Exit">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Label fx:id="totalLabel" layoutX="394.0" layoutY="144.0" />
      <Label fx:id="salaryLabel" layoutX="394.0" layoutY="290.0" />
   </children>
</AnchorPane>
