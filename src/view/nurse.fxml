<AnchorPane prefHeight="600.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.NurseController">
    <children>
        <ImageView fitHeight="600.0" fitWidth="850.0" layoutX="2.0">
            <image>
                <Image url="@../file/bck3.png" />
            </image>
        </ImageView>
        <TableView fx:id="personTable" layoutX="22.0" layoutY="31.0" prefHeight="457.0" prefWidth="585.0">
            <columns>
                <TableColumn fx:id="nurseColumn" prefWidth="62.0" text="nurse" />
                <TableColumn fx:id="firstNameColumn" prefWidth="82.0" text="first name" />
                <TableColumn fx:id="lastNameColumn" text="last name" />
                <TableColumn fx:id="usernameColumn" prefWidth="77.0" text="username" />
                <TableColumn fx:id="phoneColumn" prefWidth="67.0" text="phone" />
                <TableColumn fx:id="idColumn" minWidth="9.0" prefWidth="61.0" text="id" />
                <TableColumn fx:id="nationalityColumn" minWidth="2.0" prefWidth="89.0" text="nationality" />
                <TableColumn fx:id="doctorColumn" prefWidth="66.0" text="doctor" />
            </columns>
        </TableView>
        <TextArea fx:id="descriptionTextArea" layoutX="636.0" layoutY="100.0" prefHeight="158.0" prefWidth="177.0" />
        <Label layoutX="630.0" layoutY="56.0" text="description">
            <font>
                <Font size="17.0" />
            </font>
        </Label>
        <Label layoutX="636.0" layoutY="333.0" text="fee">
            <font>
                <Font size="17.0" />
            </font>
        </Label>
        <Label fx:id="feeLabel" layoutX="694.0" layoutY="333.0" prefHeight="26.0" prefWidth="106.0" />
        <Button layoutX="648.0" layoutY="512.0" mnemonicParsing="false" onAction="#handleDelete" text="Discharge">
            <font>
                <Font size="17.0" />
            </font>
        </Button>
        <Button fx:id="exitButton" layoutX="762.0" layoutY="512.0" mnemonicParsing="false" onAction="#handleExit" text="Exit">
            <font>
                <Font size="17.0" />
            </font>
        </Button>
      <Button fx:id="billButton" layoutX="584.0" layoutY="512.0" mnemonicParsing="false" onAction="#handleBill" text="Bill">
         <font>
            <Font size="17.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
